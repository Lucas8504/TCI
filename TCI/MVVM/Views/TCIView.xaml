<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:gauge="clr-namespace:Syncfusion.Maui.Gauges;assembly=Syncfusion.Maui.Gauges"
             x:Class="TCI.MVVM.Views.TCIView"
             Title="TCIView">

    <ScrollView>
        <ScrollView.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFB3E5FC" Offset="0.0" />
                <GradientStop Color="#FF81D4FA" Offset="1.0" />
            </LinearGradientBrush>
        </ScrollView.Background>

        <VerticalStackLayout
            Padding="160"
            Spacing="20"
            VerticalOptions="Start"
            HorizontalOptions="Start">

            <!--#region Temp -->
            <Frame>
                <gauge:SfLinearGauge Orientation="Vertical" Minimum="33" Maximum="43" Interval="1" ShowTicks="True" ShowLabels="True">
                    <gauge:SfLinearGauge.BarPointers>
                        <gauge:BarPointer Value="37" Fill="#FF4CAF50" />
                    </gauge:SfLinearGauge.BarPointers>
                </gauge:SfLinearGauge>
            </Frame>
            <!--#endregion-->

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>